[alias]
  # Thanks jdavis
  # Shortcuts
  a = add
  b = branch
  bl = blame
  c = commit -v
  cl = clone
  co = checkout
  d = diff
  dc = diff --cached
  f = fetch
  h = help
  l = log
  ls = ls-files
  m = merge
  p = pull
  r = remote
  rb = rebase
  rf = reflog
  rs = reset
  rv = revert
  s = status
  sh = show
  sl = shortlog
  sm = submodule
  st = stash
  su = status -uno
  un = reset HEAD

  exec = "!exec "

  # Useful commands
  amend = commit --amend
  unstage = reset HEAD
  untrack = update-index --assume-unchanged
  track = update-index --no-assume-unchanged

  # Show repo root dir
  root = rev-parse --show-toplevel
